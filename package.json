{
  "name": "web-app-seed",
  "version": "1.0.0",
  "description": "seed for a new web app",
  "main": "server/startup.js",
  "scripts": {
    "build": "npm run build-server && npm run build-web-app",
    "build-web-app": "npm run build-web-app-typescript && npm run build-web-app-sass",
    "build-web-app-typescript": "tsc -p ./public/src",
    "build-web-app-sass": "node-sass --include-path scss public/src/styles/styles.scss public/dist/styles/styles.css",
    "build-server": "tsc -p ./server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prestart": "npm run build",
    "start": "node server/startup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesrichford/web-app-seed.git"
  },
  "author": "James Richford <=> (=)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesrichford/web-app-seed/issues"
  },
  "homepage": "https://github.com/jamesrichford/web-app-seed#readme",
  "devDependencies": {
    "@types/express": "^4.0.34",
    "@types/node": "^6.0.52",
    "@types/serve-static": "^1.7.31",
    "node-sass": "^4.0.0",
    "typescript": "^2.1.4"
  },
  "dependencies": {
    "express": "^4.14.0",
    "serve-static": "^1.11.1"
  }
}
