{
  "name": "web-app-seed",
  "version": "1.0.0",
  "description": "seed for a new web app",
  "main": "server/startup.js",
  "scripts": {
    "build": "rimraf ./dist && npm-run-all build-scripts build-server build-web-app",
    "build-web-app": "npm-run-all build-web-app-*",
    "build-web-app-images": "imagemin app/images/**/*.* --out-dir=dist/images",
    "build-web-app-assets": "webpack --optimize-minimize",
    "build-scripts": "tsc -p ./scripts",
    "build-server": "tsc -p ./server",
    "dev": "npm-run-all build-scripts dev-web-app",
    "dev-web-app": "npm-run-all --parallel expose-to-networked-devices build-web-app-images dev-web-app-*",
    "dev-web-app-assets": "webpack-dev-server --hot --devtool source-map",
    "expose-to-networked-devices": "browser-sync start --proxy localhost:8080 --files \"css/*.css\"",
    "review": "npm run review-typescript & npm run review-sass",
    "review-typescript": "tslint \"**/*.ts\" \"**/*.tsx\" --exclude \"**/*.d.ts\" --exclude \"node_modules/**/*.*\"",
    "review-sass": "sass-lint \"**/*.scss\" --ignore \"node_modules/**/*.*\"",
    "pretest": "npm run build-unit-tests",
    "test": "npm run review && npm run unit-tests",
    "build-unit-tests": "tsc -p ./test/unit-tests",
    "unit-tests": "alsatian \"./test/unit-tests/**/*.spec.js\"",
    "prestart": "npm run build",
    "start-web-server": "node server/startup.js",
    "start": "npm run start-web-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesrichford/web-app-seed.git"
  },
  "author": "James Richford <=> (=)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesrichford/web-app-seed/issues"
  },
  "homepage": "https://github.com/jamesrichford/web-app-seed#readme",
  "devDependencies": {
    "@types/compression": "0.0.33",
    "@types/express": "^4.0.34",
    "@types/handlebars": "^4.0.31",
    "@types/node": "^6.0.52",
    "@types/serve-static": "^1.7.31",
    "@types/supertest": "^2.0.0",
    "@types/watch": "0.0.28",
    "alsatian": "^1.0.0-beta.4",
    "awesome-typescript-loader": "^3.2.2",
    "browser-sync": "^2.18.6",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "handlebars": "^4.0.6",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.0.0",
    "npm-run-all": "^4.0.1",
    "sass-lint": "^1.10.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.13.1",
    "stylelint": "^8.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "supertest": "^3.0.0",
    "ts-loader": "^2.0.0",
    "tslint": "^4.1.1",
    "typescript": "^2.1.4",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.7.1"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "serve-static": "^1.11.1",
    "watch": "^1.0.1"
  }
}
