{
  "name": "web-app-seed",
  "version": "1.0.0",
  "description": "seed for a new web app",
  "main": "server/startup.js",
  "scripts": {
    "build": "rimraf ./dist && npm-run-all build:scripts build:server build:app",
    "build:webpack": "tsc ./webpack.config.ts --target es2015 --module commonjs",
    "build:app": "npm-run-all build:app:*",
    "build:app:images": "imagemin app/images/**/*.* --out-dir=dist/images",
    "build:app:assets": "npm run build:webpack && webpack --mode production",
    "build:scripts": "tsc -p ./scripts",
    "build:server": "tsc -p ./server",
    "init": "npm run build:scripts && node ./scripts/initialize-solution",
    "dev": "npm-run-all build:scripts dev:app",
    "dev:app": "npm-run-all --parallel build:app:images dev:app:assets",
    "prototype": "npm-run-all build:scripts prototype:app",
    "prototype:app": "npm-run-all --parallel build:app:images dev:app:assets expose-to-networked-devices",
    "dev:app:assets": "npm run build:webpack && webpack-dev-server --mode development --devtool source-map",
    "expose-to-networked-devices": "lt --port 3000 --subdomain webappseed",
    "init-solution": "npm run build:scripts && node ./scripts/initialize-solution.js",
    "lint": "npm run lint:typescript && npm run lint:sass",
    "lint:fix": "npm run lint:typescript -- --fix && npm run lint:sass -- --fix",
    "lint:typescript": "tslint \"**/*.ts\" \"**/*.tsx\" --exclude \"**/*.d.ts\" --exclude \"node_modules/**/*.*\"",
    "lint:sass": "sass-lint \"**/*.scss\" --ignore \"node_modules/**/*.*\"",
    "pretest": "npm run build-unit-tests",
    "test": "npm run lint && npm run unit-tests",
    "build-unit-tests": "tsc -p ./test/unit-tests",
    "unit-tests": "alsatian \"./test/unit-tests/**/*.spec.js\"",
    "start": "node server/startup.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesrichford/web-app:seed.git"
  },
  "author": "James Richford <=> (=)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesrichford/web-app:seed/issues"
  },
  "homepage": "https://github.com/jamesrichford/web-app:seed#readme",
  "devDependencies": {
    "@types/compression": "1.0.1",
    "@types/express": "^4.0.34",
    "@types/extract-text-webpack-plugin": "^3.0.4",
    "@types/handlebars": "^4.0.31",
    "@types/history": "^4.6.0",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/mini-css-extract-plugin": "^0.8.0",
    "@types/node": "^12.6.9",
    "@types/react": "^16.9.3",
    "@types/react-dom": "^16.8.5",
    "@types/react-redux": "^7.1.1",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.0.7",
    "@types/react-router-redux": "^5.0.8",
    "@types/serve-static": "^1.7.31",
    "@types/supertest": "^2.0.0",
    "@types/watch": "1.0.1",
    "@types/webpack": "^4.32.1",
    "@types/webpack-dev-server": "^3.1.2",
    "alsatian": "^3.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^3.2.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "handlebars": "^4.4.2",
    "html-webpack-plugin": "^3.2.0",
    "imagemin-cli": "^5.0.0",
    "localtunnel": "^1.9.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.0.1",
    "sass-lint": "^1.10.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "supertest": "^4.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "whatwg-fetch": "^3.0.0"
  },
  "dependencies": {
    "@justaddjam/strawberry": "^0.10.0",
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "file-loader": "^4.2.0",
    "history": "^4.7.2",
    "load-polyfills": "^0.2.1",
    "promise-polyfill": "^8.1.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^4.0.1",
    "serve-static": "^1.11.1",
    "watch": "^1.0.1"
  },
  "bundleDependencies": [
    "@justaddjam/strawberry",
    "react",
    "react-dom",
    "react-redux",
    "react-router",
    "react-router-dom",
    "redux",
    "promise-polyfill",
    "load-polyfills"
  ]
}
